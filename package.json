{
  "name": "koapi",
  "version": "0.0.0",
  "description": "A boilerplate for building api services based on Koa v2",
  "main": "index.js",
  "scripts": {
    "start": "node bin/server.js | ./node_modules/.bin/bunyan -o short",
    "dev": "cross-env NODE_ENV=development nodemon bin/server.js | ./node_modules/.bin/bunyan -o short",
    "build": "cross-env NODE_ENV=production babel src -d dist --copy-files",
    "test": "cross-env NODE_ENV=test jest --config .jestrc --forceExit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src test"
  },
  "author": "Chun-Kai Wang <chunkai1312@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bunyan": "^1.8.10",
    "dotenv": "^4.0.0",
    "glob": "^7.1.2",
    "kcors": "^1.3.2",
    "koa": "^2.2.0",
    "koa-bodyparser": "^3.2.0",
    "koa-bunyan-logger": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^3.1.0",
    "koa-json-error": "^3.1.2",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.1.1",
    "mongoose": "^4.9.7",
    "mongoose-delete": "^0.3.4",
    "mongoose-hidden": "^1.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "bin": {
    "server": "bin/server.js"
  }
}
